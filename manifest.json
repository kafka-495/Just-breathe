{
  "manifest_version": 2,
  "name": "Just Breathe",
  "version": "1.0",
  "description": "You have time, remember to breathe",
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Just Breathe",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  }
}

