{
  "manifest_version": 2,
  "name": "Simple Alarm Extension",
  "version": "1.0",
  "description": "A simple browser alarm extension",
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Alarm Extension",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  }
}

